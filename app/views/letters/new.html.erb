<div class="new-issue-form-container clearfix">
  <div class="new-issue-form clearfix">
    <%= form_for @letter do |f| %>
      <dl class="form">
        <dt><%= f.label :标题 %></dt>
        <dd><%= f.text_field :title %></dd>
      </dl>
      <dl class="form">
        <dt><%= f.label :内容 %></dt>
        <dd><%= f.text_area :content %></dd>
      </dl>
      <p><%= f.submit :class => "submit-issue-button btn btn-primary" %></p>
    <% end %>
  </div>
</div>